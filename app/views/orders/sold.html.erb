<h1>Vehicles you have sold</h1>


<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>Manufacturer</th>
      <th>Model</th>
      <th>State</th>
      <th>Condition</th>
      <th>Price</th>
      <th>Seller</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sold_items.each do |item| %>
      <tr>
        <td><%= item.listing.year %></td>
        <td><%= item.listing.manufacturer %></td>
        <td><%= item.listing.model %></td>
        <td><%= item.listing.state %></td>
        <td><%= format_condition(item.listing.condition) %></td>
        <td><%= item.listing.price %></td>
        <td><%= item.seller.username %></td> 
        <td><%= link_to 'Show', item.listing %></td>
      <tr>
    <% end %>
  <tbody>
</table>